---
import { siteConfig } from "../config";

interface Props {
  currentPage?: string;
}

const { currentPage = "/" } = Astro.props;
---

<nav class="sticky top-0 z-50 w-full py-4 px-4" style="background: rgba(240, 242, 241, 0.85); backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px); border-bottom: 1px solid rgba(200, 206, 204, 0.3);">
  <div class="max-w-5xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-3">
    <a href="/" class="group flex items-center gap-2.5 text-base font-bold tracking-tight" style="font-family: 'Space Grotesk', sans-serif; color: var(--color-primary-dark);">
      <span class="flex items-center justify-center w-8 h-8 rounded-lg text-xs font-bold" style="background: var(--color-primary-dark); color: var(--color-accent);">RD</span>
      <span class="group-hover:opacity-70 transition-opacity">{siteConfig.name}</span>
    </a>
    <div class="flex gap-1.5">
      {siteConfig.pages.map((page) => (
        <a
          href={page.href}
          class:list={["nav-pill px-4 py-1.5 rounded-full text-sm font-medium", { active: currentPage === page.href }]}
          style="color: var(--color-primary);"
        >
          {page.label}
        </a>
      ))}
    </div>
  </div>
</nav>
