---
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "../config";
---

<Layout currentPage="/">
  <!-- ═══ HERO ═══ -->
  <section class="relative pt-16 sm:pt-24 pb-20 px-4 overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(var(--color-primary) 1px, transparent 1px); background-size: 24px 24px;"></div>

    <div class="relative max-w-5xl mx-auto">
      <div class="flex flex-col lg:flex-row items-center lg:items-start gap-12 lg:gap-16">
        <!-- Left: Photo + identity -->
        <div class="hero-left flex flex-col items-center lg:items-start shrink-0">
          <div class="relative mb-8">
            <div class="hero-photo-glow absolute inset-0 rounded-2xl" style="background: var(--color-accent); opacity: 0.15; filter: blur(24px);"></div>
            <img
              src="/profile.jpg"
              alt={siteConfig.name}
              class="hero-photo relative w-40 h-40 sm:w-48 sm:h-48 rounded-2xl object-cover shadow-xl"
              style="border: 3px solid var(--color-accent);"
            />
          </div>

          <!-- Social -->
          <div class="hero-social flex gap-4">
            <a href={siteConfig.social.linkedin} target="_blank" rel="noopener" class="tooltip-container icon-hover flex items-center justify-center w-10 h-10 rounded-xl" style="background: var(--color-surface); color: var(--color-primary);" aria-label="LinkedIn">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              <span class="tooltip">LinkedIn</span>
            </a>
            <a href={siteConfig.social.github} target="_blank" rel="noopener" class="tooltip-container icon-hover flex items-center justify-center w-10 h-10 rounded-xl" style="background: var(--color-surface); color: var(--color-primary);" aria-label="GitHub">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
              <span class="tooltip">GitHub</span>
            </a>
            <a href={siteConfig.social.dblp} target="_blank" rel="noopener" class="tooltip-container icon-hover flex items-center justify-center w-10 h-10 rounded-xl font-mono text-xs font-bold" style="background: var(--color-surface); color: var(--color-primary);" aria-label="dblp">
              dblp
              <span class="tooltip">Publications</span>
            </a>
            <a href={siteConfig.social.orcid} target="_blank" rel="noopener" class="tooltip-container icon-hover flex items-center justify-center w-10 h-10 rounded-xl" style="background: var(--color-surface); color: var(--color-primary);" aria-label="ORCID">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.022-2.484 4.022-3.722 0-1.847-1.331-3.722-3.916-3.722h-2.403z"/></svg>
              <span class="tooltip">ORCID</span>
            </a>
            <a href={`mailto:${siteConfig.social.email}`} class="tooltip-container icon-hover flex items-center justify-center w-10 h-10 rounded-xl" style="background: var(--color-surface); color: var(--color-primary);" aria-label="Email">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              <span class="tooltip">Email</span>
            </a>
          </div>
        </div>

        <!-- Right: Text content -->
        <div class="hero-right flex-1 text-center lg:text-left">
          <div class="hero-label section-label justify-center lg:justify-start mb-5">
            Research Associate &middot; Fraunhofer IIS
          </div>

          <h1 class="hero-title text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tighter leading-[1.05] mb-5" style="color: var(--color-primary-dark);">
            {siteConfig.name}
          </h1>

          <p class="hero-subtitle text-lg sm:text-xl font-light leading-relaxed mb-8 max-w-lg mx-auto lg:mx-0" style="color: var(--color-primary);">
            {siteConfig.hero.intro}
          </p>

          <!-- Stats row -->
          <div class="hero-stats flex flex-wrap justify-center lg:justify-start gap-4">
            {siteConfig.stats.map((stat) => (
              <div class="stat-card glass-card-solid px-5 py-3 text-center" style="min-width: 110px;">
                <div class="text-2xl font-bold" style="font-family: 'Space Grotesk'; color: var(--color-primary-dark);">{stat.value}</div>
                <div class="text-[0.65rem] uppercase tracking-widest font-medium" style="color: var(--color-primary-light);">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ SKILLS ═══ -->
  <section class="py-20 px-4" style="background: var(--color-surface);">
    <div class="max-w-5xl mx-auto">
      <div class="reveal section-label mb-3">Expertise</div>
      <h2 class="reveal text-3xl sm:text-4xl font-bold tracking-tight mb-4" style="color: var(--color-primary-dark);">Skills & Technologies</h2>
      <div class="accent-divider reveal mb-12"></div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        {siteConfig.skills.map((group, i) => (
          <div class={`reveal card-hover glass-card-solid p-6 stagger-${i + 1}`}>
            <div class="flex items-center gap-3 mb-5">
              <div class="w-2 h-2 rounded-full" style="background: var(--color-accent);"></div>
              <h3 class="text-xs font-bold uppercase tracking-widest" style="color: var(--color-primary-dark);">{group.category}</h3>
            </div>
            <div class="flex flex-wrap gap-2">
              {group.items.map((item) => (
                <span class="skill-tag text-xs px-3 py-1.5 rounded-lg font-medium" style="background: var(--color-surface); color: var(--color-primary);">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ GITGRAPH TIMELINE ═══ -->
  <section class="py-20 px-4">
    <div class="max-w-5xl mx-auto">
      <div class="reveal section-label mb-3">Journey</div>
      <h2 class="reveal text-3xl sm:text-4xl font-bold tracking-tight mb-4" style="color: var(--color-primary-dark);">Career Timeline</h2>
      <p class="reveal text-sm mb-2 max-w-lg" style="color: var(--color-primary-light);">From metalworker apprentice to PhD researcher — two parallel branches that keep converging.</p>
      <div class="accent-divider reveal mb-14"></div>

      <!-- Desktop: horizontal SVG gitgraph -->
      <div class="reveal hidden md:block overflow-x-auto pb-4" id="gitgraph-desktop">
        <div class="glass-card-solid p-8">
          <svg viewBox="0 0 1100 300" class="w-full" style="min-width: 800px;">
            <!-- Branch labels with icons -->
            <rect x="12" y="72" width="88" height="26" rx="6" fill="var(--color-accent)" fill-opacity="0.15" />
            <text x="56" y="90" text-anchor="middle" fill="var(--color-accent)" font-family="'JetBrains Mono'" font-size="11" font-weight="600">education</text>

            <rect x="12" y="192" width="58" height="26" rx="6" fill="var(--color-primary)" fill-opacity="0.1" />
            <text x="41" y="210" text-anchor="middle" fill="var(--color-primary-light)" font-family="'JetBrains Mono'" font-size="11" font-weight="600">work</text>

            <!-- Education branch line -->
            <line x1="120" y1="85" x2="1060" y2="85" stroke="var(--color-accent)" stroke-width="2.5" stroke-linecap="round" class="gitgraph-line" />

            <!-- Work branch line -->
            <line x1="120" y1="205" x2="1060" y2="205" stroke="var(--color-primary-light)" stroke-width="2.5" stroke-linecap="round" stroke-opacity="0.5" class="gitgraph-line" />

            <!-- Connecting lines (merge points) -->
            <line x1="120" y1="85" x2="120" y2="205" stroke="var(--color-surface)" stroke-width="1" stroke-dasharray="4 4" />
            <line x1="1060" y1="85" x2="1060" y2="205" stroke="var(--color-surface)" stroke-width="1" stroke-dasharray="4 4" />

            <!-- Education nodes -->
            {siteConfig.timeline.education.map((item, i) => {
              const x = 120 + (i / (siteConfig.timeline.education.length - 1)) * 940;
              const isHighlight = item.highlight;
              return (
                <g class="gitgraph-node" style={`--delay: ${0.8 + i * 0.12}s`}>
                  {isHighlight ? (
                    <>
                      <circle cx={x} cy="85" r="12" fill="var(--color-accent)" fill-opacity="0.2" />
                      <circle cx={x} cy="85" r="7" fill="var(--color-accent)" stroke="var(--color-surface-light)" stroke-width="2.5" />
                    </>
                  ) : (
                    <circle cx={x} cy="85" r="5" fill="var(--color-accent)" stroke="var(--color-surface-light)" stroke-width="2" />
                  )}
                  <text
                    x={x}
                    y="52"
                    text-anchor="middle"
                    fill={isHighlight ? "var(--color-primary-dark)" : "var(--color-primary)"}
                    font-family="'IBM Plex Sans'"
                    font-size={isHighlight ? "9.5" : "8.5"}
                    font-weight={isHighlight ? "600" : "400"}
                  >
                    {item.label.length > 24 ? item.label.slice(0, 24) + '...' : item.label}
                  </text>
                  <text x={x} y="120" text-anchor="middle" fill="var(--color-primary-light)" font-family="'JetBrains Mono'" font-size="10" font-weight="500">
                    {item.year}
                  </text>
                </g>
              );
            })}

            <!-- Work nodes -->
            {siteConfig.timeline.work.map((item, i) => {
              const x = 120 + (i / (siteConfig.timeline.work.length - 1)) * 940;
              const isHighlight = item.highlight;
              return (
                <g class="gitgraph-node" style={`--delay: ${1.0 + i * 0.12}s`}>
                  {isHighlight ? (
                    <>
                      <circle cx={x} cy="205" r="12" fill="var(--color-primary)" fill-opacity="0.15" />
                      <circle cx={x} cy="205" r="7" fill="var(--color-primary)" stroke="var(--color-surface-light)" stroke-width="2.5" />
                    </>
                  ) : (
                    <circle cx={x} cy="205" r="5" fill="var(--color-primary-light)" stroke="var(--color-surface-light)" stroke-width="2" />
                  )}
                  <text
                    x={x}
                    y="248"
                    text-anchor="middle"
                    fill={isHighlight ? "var(--color-primary-dark)" : "var(--color-primary)"}
                    font-family="'IBM Plex Sans'"
                    font-size={isHighlight ? "9.5" : "8.5"}
                    font-weight={isHighlight ? "600" : "400"}
                  >
                    {item.label.length > 24 ? item.label.slice(0, 24) + '...' : item.label}
                  </text>
                  <text x={x} y="268" text-anchor="middle" fill="var(--color-primary-light)" font-family="'JetBrains Mono'" font-size="10" font-weight="500">
                    {item.year}
                  </text>
                </g>
              );
            })}
          </svg>
        </div>
      </div>

      <!-- Mobile: vertical timeline -->
      <div class="md:hidden">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
          <div>
            <div class="flex items-center gap-2 mb-5">
              <div class="w-3 h-3 rounded-full" style="background: var(--color-accent);"></div>
              <span class="font-mono text-xs font-bold uppercase tracking-widest" style="color: var(--color-accent);">Education</span>
            </div>
            <div class="border-l-2 ml-1.5 pl-6 space-y-6" style="border-color: var(--color-accent);">
              {siteConfig.timeline.education.map((item) => (
                <div class="reveal relative">
                  <div class="absolute -left-[29px] top-1.5 w-3 h-3 rounded-full" style={`background: ${item.highlight ? 'var(--color-accent)' : 'var(--color-surface-light)'}; border: 2.5px solid var(--color-accent); box-shadow: ${item.highlight ? '0 0 8px var(--color-accent-glow)' : 'none'};`}></div>
                  <p class="font-mono text-[0.65rem] font-medium mb-0.5" style="color: var(--color-accent);">{item.year}{item.endYear ? ` - ${item.endYear}` : ''}</p>
                  <p class={`text-sm leading-snug ${item.highlight ? 'font-bold' : 'font-medium'}`} style="color: var(--color-primary-dark);">{item.label}</p>
                  <p class="text-xs mt-0.5" style="color: var(--color-primary-light);">{item.detail}</p>
                </div>
              ))}
            </div>
          </div>

          <div>
            <div class="flex items-center gap-2 mb-5">
              <div class="w-3 h-3 rounded-full" style="background: var(--color-primary-light);"></div>
              <span class="font-mono text-xs font-bold uppercase tracking-widest" style="color: var(--color-primary-light);">Work</span>
            </div>
            <div class="border-l-2 ml-1.5 pl-6 space-y-6" style="border-color: var(--color-primary-light);">
              {siteConfig.timeline.work.map((item) => (
                <div class="reveal relative">
                  <div class="absolute -left-[29px] top-1.5 w-3 h-3 rounded-full" style={`background: ${item.highlight ? 'var(--color-primary)' : 'var(--color-surface-light)'}; border: 2.5px solid var(--color-primary-light);`}></div>
                  <p class="font-mono text-[0.65rem] font-medium mb-0.5" style="color: var(--color-primary-light);">{item.year}{item.endYear ? ` - ${item.endYear}` : ''}</p>
                  <p class={`text-sm leading-snug ${item.highlight ? 'font-bold' : 'font-medium'}`} style="color: var(--color-primary-dark);">{item.label}</p>
                  <p class="text-xs mt-0.5" style="color: var(--color-primary-light);">{item.detail}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ RECENT HIGHLIGHTS ═══ -->
  <section class="py-16 px-4" style="background: var(--color-primary-dark);">
    <div class="max-w-5xl mx-auto text-center">
      <p class="text-xs font-mono uppercase tracking-widest mb-6" style="color: var(--color-accent);">Highlights</p>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="reveal p-6 rounded-xl stagger-1" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.06);">
          <div class="text-2xl mb-2" style="color: var(--color-accent);">&#9733;</div>
          <p class="text-sm font-semibold mb-1" style="color: var(--color-surface-light);">Best Paper Award</p>
          <p class="text-xs opacity-50" style="color: var(--color-surface);">KGSWC 2024 &mdash; LLM-based NER</p>
        </div>
        <div class="reveal p-6 rounded-xl stagger-2" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.06);">
          <div class="text-2xl mb-2" style="color: var(--color-accent);">&#9733;</div>
          <p class="text-sm font-semibold mb-1" style="color: var(--color-surface-light);">Best Workshop Paper</p>
          <p class="text-xs opacity-50" style="color: var(--color-surface);">ICPM 2023 &mdash; Knowledge Graphs</p>
        </div>
        <div class="reveal p-6 rounded-xl stagger-3" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.06);">
          <div class="text-2xl mb-2" style="color: var(--color-accent);">&#9878;</div>
          <p class="text-sm font-semibold mb-1" style="color: var(--color-surface-light);">PhD Candidate</p>
          <p class="text-xs opacity-50" style="color: var(--color-surface);">FAU &mdash; Discovery in Cyber-Physical Systems</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Gitgraph animation script -->
  <script>
    const gitgraphObs = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.querySelectorAll('.gitgraph-line').forEach((line) => {
            const el = line as SVGLineElement;
            const length = el.getTotalLength ? el.getTotalLength() : 1000;
            el.style.setProperty('--line-length', String(length));
            el.style.strokeDasharray = String(length);
            el.style.strokeDashoffset = String(length);
            el.classList.add('animate');
          });
          entry.target.querySelectorAll('.gitgraph-node').forEach((node, i) => {
            const el = node as HTMLElement;
            setTimeout(() => el.classList.add('animate'), 600 + i * 100);
          });
          gitgraphObs.unobserve(entry.target);
        }
      });
    }, { threshold: 0.15 });

    const desktop = document.getElementById('gitgraph-desktop');
    if (desktop) gitgraphObs.observe(desktop);
  </script>
</Layout>
