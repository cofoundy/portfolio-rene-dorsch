---
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "../config";
---

<Layout currentPage="/">
  <!-- ═══ HERO ═══ -->
  <section class="pt-8 pb-16 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <img
        src="/profile.jpg"
        alt={siteConfig.name}
        class="hero-photo w-32 h-32 rounded-full mx-auto mb-6 object-cover border-3"
        style="border-color: var(--color-accent);"
      />
      <h1 class="hero-title text-4xl sm:text-5xl font-bold tracking-tight mb-2" style="color: var(--color-primary-dark);">
        {siteConfig.name}
      </h1>
      <p class="hero-subtitle text-lg font-medium mb-4 font-mono" style="color: var(--color-primary-light);">
        {siteConfig.hero.headline}
      </p>
      <p class="hero-intro max-w-xl mx-auto text-base leading-relaxed mb-8" style="color: var(--color-primary);">
        {siteConfig.hero.intro}
      </p>

      <!-- Social Links -->
      <div class="hero-social flex justify-center gap-5 mb-8">
        <a href={siteConfig.social.linkedin} target="_blank" rel="noopener" class="icon-hover" style="color: var(--color-primary-light);" aria-label="LinkedIn">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
        </a>
        <a href={siteConfig.social.github} target="_blank" rel="noopener" class="icon-hover" style="color: var(--color-primary-light);" aria-label="GitHub">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
        </a>
        <a href={siteConfig.social.dblp} target="_blank" rel="noopener" class="icon-hover font-mono text-sm font-bold" style="color: var(--color-primary-light);" aria-label="dblp">
          dblp
        </a>
        <a href={siteConfig.social.orcid} target="_blank" rel="noopener" class="icon-hover" style="color: var(--color-primary-light);" aria-label="ORCID">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.022-2.484 4.022-3.722 0-1.847-1.331-3.722-3.916-3.722h-2.403z"/></svg>
        </a>
        <a href={`mailto:${siteConfig.social.email}`} class="icon-hover" style="color: var(--color-primary-light);" aria-label="Email">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
        </a>
      </div>

      <!-- Stats -->
      <div class="hero-stats flex justify-center gap-10 mb-6">
        {siteConfig.stats.map((stat) => (
          <div class="text-center">
            <div class="text-2xl font-bold" style="font-family: 'Space Grotesk'; color: var(--color-primary-dark);">{stat.value}</div>
            <div class="text-xs uppercase tracking-widest" style="color: var(--color-primary-light);">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ SKILLS ═══ -->
  <section class="py-16 px-4" style="background-color: var(--color-surface);">
    <div class="max-w-5xl mx-auto">
      <h2 class="reveal text-2xl font-bold tracking-tight mb-10 text-center" style="color: var(--color-primary-dark);">Skills</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {siteConfig.skills.map((group, i) => (
          <div class={`reveal card-hover rounded-xl p-6 stagger-${i + 1}`} style="background-color: var(--color-surface-light);">
            <h3 class="text-sm font-bold uppercase tracking-widest mb-4" style="color: var(--color-accent);">{group.category}</h3>
            <div class="flex flex-wrap gap-2">
              {group.items.map((item) => (
                <span class="skill-tag text-xs px-3 py-1 rounded-full font-medium" style="background-color: var(--color-surface); color: var(--color-primary);">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ GITGRAPH TIMELINE ═══ -->
  <section class="py-16 px-4">
    <div class="max-w-5xl mx-auto">
      <h2 class="reveal text-2xl font-bold tracking-tight mb-12 text-center" style="color: var(--color-primary-dark);">Timeline</h2>

      <!-- Desktop: horizontal SVG gitgraph -->
      <div class="reveal hidden md:block overflow-x-auto" id="gitgraph-desktop">
        <svg viewBox="0 0 1100 320" class="w-full" style="min-width: 800px;">
          <!-- Branch labels -->
          <text x="20" y="95" fill="var(--color-accent)" font-family="'JetBrains Mono'" font-size="12" font-weight="500">education</text>
          <text x="20" y="215" fill="var(--color-primary-light)" font-family="'JetBrains Mono'" font-size="12" font-weight="500">work</text>

          <!-- Education branch line -->
          <line x1="110" y1="90" x2="1060" y2="90" stroke="var(--color-accent)" stroke-width="2.5" stroke-linecap="round" class="gitgraph-line" id="edu-line" />

          <!-- Work branch line -->
          <line x1="110" y1="210" x2="1060" y2="210" stroke="var(--color-primary-light)" stroke-width="2.5" stroke-linecap="round" class="gitgraph-line" id="work-line" />

          <!-- Education nodes -->
          {siteConfig.timeline.education.map((item, i) => {
            const x = 110 + (i / (siteConfig.timeline.education.length - 1)) * 950;
            const isHighlight = item.highlight;
            return (
              <g class="gitgraph-node" style={`--delay: ${0.8 + i * 0.15}s`}>
                {isHighlight ? (
                  <polygon
                    points={`${x},70 ${x+10},90 ${x},110 ${x-10},90`}
                    fill="var(--color-accent)"
                    stroke="var(--color-surface-light)"
                    stroke-width="2"
                  />
                ) : (
                  <circle cx={x} cy="90" r="6" fill="var(--color-accent)" stroke="var(--color-surface-light)" stroke-width="2" />
                )}
                <text
                  x={x}
                  y="60"
                  text-anchor="middle"
                  fill="var(--color-primary)"
                  font-family="'IBM Plex Sans'"
                  font-size="9"
                  font-weight={isHighlight ? "600" : "400"}
                >
                  {item.label.length > 22 ? item.label.slice(0, 22) + '…' : item.label}
                </text>
                <text x={x} y="130" text-anchor="middle" fill="var(--color-primary-light)" font-family="'JetBrains Mono'" font-size="10">
                  {item.year}
                </text>
              </g>
            );
          })}

          <!-- Work nodes -->
          {siteConfig.timeline.work.map((item, i) => {
            const x = 110 + (i / (siteConfig.timeline.work.length - 1)) * 950;
            const isHighlight = item.highlight;
            return (
              <g class="gitgraph-node" style={`--delay: ${1.2 + i * 0.15}s`}>
                {isHighlight ? (
                  <polygon
                    points={`${x},190 ${x+10},210 ${x},230 ${x-10},210`}
                    fill="var(--color-primary)"
                    stroke="var(--color-surface-light)"
                    stroke-width="2"
                  />
                ) : (
                  <circle cx={x} cy="210" r="6" fill="var(--color-primary)" stroke="var(--color-surface-light)" stroke-width="2" />
                )}
                <text
                  x={x}
                  y="256"
                  text-anchor="middle"
                  fill="var(--color-primary)"
                  font-family="'IBM Plex Sans'"
                  font-size="9"
                  font-weight={isHighlight ? "600" : "400"}
                >
                  {item.label.length > 22 ? item.label.slice(0, 22) + '…' : item.label}
                </text>
                <text x={x} y="278" text-anchor="middle" fill="var(--color-primary-light)" font-family="'JetBrains Mono'" font-size="10">
                  {item.year}
                </text>
              </g>
            );
          })}
        </svg>
      </div>

      <!-- Mobile: vertical timeline -->
      <div class="md:hidden space-y-0">
        <h3 class="reveal text-xs uppercase tracking-widest font-bold mb-4" style="color: var(--color-accent);">Education</h3>
        <div class="border-l-2 ml-3 pl-6 mb-8 space-y-5" style="border-color: var(--color-accent);">
          {siteConfig.timeline.education.map((item) => (
            <div class="reveal relative">
              <div class="absolute -left-[31px] top-1 w-3 h-3 rounded-full" style={`background: ${item.highlight ? 'var(--color-accent)' : 'var(--color-surface)'}; border: 2px solid var(--color-accent);`}></div>
              <p class="font-mono text-xs" style="color: var(--color-primary-light);">{item.year}{item.endYear ? ` – ${item.endYear}` : ''}</p>
              <p class={`text-sm ${item.highlight ? 'font-bold' : 'font-medium'}`} style="color: var(--color-primary-dark);">{item.label}</p>
              <p class="text-xs" style="color: var(--color-primary-light);">{item.detail}</p>
            </div>
          ))}
        </div>

        <h3 class="reveal text-xs uppercase tracking-widest font-bold mb-4" style="color: var(--color-primary-light);">Work</h3>
        <div class="border-l-2 ml-3 pl-6 space-y-5" style="border-color: var(--color-primary-light);">
          {siteConfig.timeline.work.map((item) => (
            <div class="reveal relative">
              <div class="absolute -left-[31px] top-1 w-3 h-3 rounded-full" style={`background: ${item.highlight ? 'var(--color-primary)' : 'var(--color-surface)'}; border: 2px solid var(--color-primary-light);`}></div>
              <p class="font-mono text-xs" style="color: var(--color-primary-light);">{item.year}{item.endYear ? ` – ${item.endYear}` : ''}</p>
              <p class={`text-sm ${item.highlight ? 'font-bold' : 'font-medium'}`} style="color: var(--color-primary-dark);">{item.label}</p>
              <p class="text-xs" style="color: var(--color-primary-light);">{item.detail}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Gitgraph animation script -->
  <script>
    const gitgraphObs = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.querySelectorAll('.gitgraph-line').forEach((line) => {
            const el = line as SVGLineElement;
            const length = el.getTotalLength ? el.getTotalLength() : 1000;
            el.style.setProperty('--line-length', String(length));
            el.style.strokeDasharray = String(length);
            el.style.strokeDashoffset = String(length);
            el.classList.add('animate');
          });
          entry.target.querySelectorAll('.gitgraph-node').forEach((node, i) => {
            const el = node as HTMLElement;
            setTimeout(() => el.classList.add('animate'), 800 + i * 120);
          });
          gitgraphObs.unobserve(entry.target);
        }
      });
    }, { threshold: 0.2 });

    const desktop = document.getElementById('gitgraph-desktop');
    if (desktop) gitgraphObs.observe(desktop);
  </script>
</Layout>
